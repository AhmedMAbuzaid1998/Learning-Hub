@model User
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout";
}

<div class="signup-wrapper">
    <!-- Logo Container (Left Side) -->
    <div class="logo-container">
        <img src="~/images/logo.png" alt="Website Logo" class="signup-logo" />
    </div>

    <!-- Form Container (Right Side) -->
    <div class="form-container">
        <h1>Sign Up</h1>
        <p class="subheading">Sign up your account</p>

        <form asp-action="Register" method="post" class="signup-form">
            <div class="form-group">
                <label asp-for="username">Username</label>
                <input asp-for="username" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="username" class="text-danger">Required</span>
            </div>

            <div class="form-group">
                <label asp-for="email">What is your e-mail?</label>
                <input asp-for="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="email" class="text-danger">Required</span>
            </div>

            <div class="form-group">
                <label asp-for="password">Enter your password</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Create password" />
                <span asp-validation-for="password" class="text-danger">Required</span>
            </div>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="error-message">
                    @Html.ValidationSummary()
                </div>
            }

            <button type="submit" class="btn-register">Register</button>
        </form>
    </div>
</div>